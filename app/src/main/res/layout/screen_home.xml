<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b1717">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="320dp">
    <TextView
        android:id="@+id/cashTV"
        android:layout_width="136dp"
        android:layout_height="32dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/amarante"
        android:text="Cash: $ @cash"
        android:textColor="#ce1212"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/debtTextView"
        android:layout_width="136dp"
        android:layout_height="32dp"
        android:layout_gravity="right"
        android:fontFamily="@font/amarante"
        android:text="Debt: $ @debt"
        android:textColor="#ce1212"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/beautifulMan"
            android:layout_width="141dp"
            android:layout_height="162dp"
            android:layout_gravity="center"
            android:fontFamily="@font/amarante"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/jackblacklogo" />

        <Button
        android:id="@+id/loanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/amarante"
        android:text="Take Loan"
            android:layout_marginBottom="20dp"
        android:textColor="#1b1717"
        android:textSize="20sp"
        app:backgroundTint="#810000"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/repayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/amarante"
        android:text="Repay Debt"
        android:layout_marginBottom="30dp"
        android:textColor="#1b1717"
        android:textSize="20sp"
        app:backgroundTint="#810000"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

        <Button
        android:id="@+id/playButton"
        android:layout_width="226dp"
        android:layout_height="81dp"
        android:layout_gravity="center"
        android:fontFamily="@font/amarante"
        android:text="Play"
        android:textColor="#1b1717"
        android:textSize="30sp"
        app:backgroundTint="#810000"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>