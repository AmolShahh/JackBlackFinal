<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b1717"
    tools:context=".BetScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="320dp">

        <TextView
            android:id="@+id/cashTV2"
            android:layout_width="136dp"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:fontFamily="@font/amarante"
            android:text="Cash: $ @cash"
            android:textColor="#ce1212"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/debtTextView3"
            android:layout_width="136dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:fontFamily="@font/amarante"
            android:text="Debt: $ @debt"
            android:textColor="#ce1212"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
        android:id="@+id/beautifulMan5"
        android:layout_width="159dp"
        android:layout_height="177dp"
        android:layout_gravity="center"
            android:layout_marginBottom="20dp"

        android:fontFamily="@font/amarante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/jackblackpic3" />

        <TextView
        android:id="@+id/textView3"
        android:layout_width="243dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:fontFamily="@font/amarante"
        android:gravity="center"
        android:text="Bet Amount"
        android:textSize="40sp"
        android:textColor="#ce1212"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNumber3"
        android:layout_width="245dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:textColor="#ce1212"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:fontFamily="@font/amarante"
        android:gravity="center"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/betButton"
        android:layout_width="213dp"
        android:layout_height="82dp"
        android:layout_gravity="center"
        android:fontFamily="@font/amarante"
        android:text="Play"
        android:layout_marginBottom="20dp"
        android:textColor="#1b1717"
        android:textSize="40sp"
        app:backgroundTint="#810000"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/goHome3"
        android:layout_width="181dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:fontFamily="@font/amarante"
        android:text="Home"
        android:textColor="#1b1717"
        android:textSize="30sp"
        app:backgroundTint="#810000"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>