<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#1b1717"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="320dp">

        <TextView
            android:id="@+id/winLoseTextview"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/amarante"
            android:gravity="center"
            android:text="You something"
            android:textColor="#ce1212"
            android:textSize="45sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/jackBlack"
            android:layout_width="267dp"
            android:layout_height="152dp"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/jbp5" />

        <TextView
            android:id="@+id/dealerHandTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/amarante"
            android:gravity="center"
            android:text="Dealer Hand"
            android:layout_marginTop="30dp"
            android:textColor="#eeebdd"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dealerTotal2"
            android:layout_width="173dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:fontFamily="@font/amarante"
            android:gravity="center"
            android:text="DEALER TOTAL:"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:textColor="#ce1212"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/playerTotal2"
            android:layout_width="173dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:fontFamily="@font/amarante"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="PLAYER TOTAL:"
            android:textColor="#ce1212"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
        android:id="@+id/playerHandTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/amarante"
        android:gravity="center"
        android:textColor="#eeebdd"
        android:text="Player Hand"
        android:textSize="20sp"
            android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />

        <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="HOME"
        android:fontFamily="@font/amarante"
        android:textColor="#1b1717"
        android:textSize="20sp"
        app:backgroundTint="#810000"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>