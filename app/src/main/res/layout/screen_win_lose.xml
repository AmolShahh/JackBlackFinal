<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/playerHandTextView2"
        android:layout_width="208dp"
        android:layout_height="113dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:text="Player Hand"
        android:fontFamily="@font/amarante"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.747" />

    <TextView
        android:id="@+id/dealerTotal2"
        android:layout_width="173dp"
        android:layout_height="33dp"
        android:fontFamily="@font/amarante"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="116dp"
        android:layout_marginRight="116dp"
        android:text="DEALER TOTAL:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playerTotal2"
        android:layout_width="173dp"
        android:layout_height="33dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="116dp"
        android:layout_marginRight="116dp"
        android:fontFamily="@font/amarante"
        android:text="PLAYER TOTAL:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dealerHandTextView2"
        android:layout_width="208dp"
        android:fontFamily="@font/amarante"
        android:layout_height="113dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="116dp"
        android:layout_marginRight="116dp"
        android:text="Dealer Hand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:fontFamily="@font/amarante"
        android:layout_marginBottom="36dp"
        android:text="HOME"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/winLoseTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:fontFamily="@font/amarante"
        android:layout_marginLeft="132dp"
        android:layout_marginTop="312dp"
        android:text="You something"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>