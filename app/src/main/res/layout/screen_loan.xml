<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loanAmountNumber"
    android:layout_width="match_parent"
    android:background="#1b1717"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="320dp">

        <TextView
            android:id="@+id/cashTV"
            android:layout_width="136dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:fontFamily="@font/amarante"
            android:layout_marginTop="10dp"
            android:text="Cash: $ @cash"
            android:textColor="#ce1212"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/debtTextView"
            android:layout_width="136dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:fontFamily="@font/amarante"
            android:text="Debt: $ @debt"
            android:textColor="#ce1212"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
        android:id="@+id/beautifulMan3"
        android:layout_width="166dp"
        android:layout_height="147dp"
        android:layout_gravity="center"
            android:layout_marginTop="20dp"
        android:fontFamily="@font/amarante"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/jackblackpic2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="243dp"
            android:layout_height="69dp"
            android:layout_gravity="center"
            android:fontFamily="@font/amarante"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:text="Loan Amount"
            android:textColor="#ce1212"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="245dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:ems="10"
            android:fontFamily="@font/amarante"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#ce1212"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
        android:id="@+id/loanButton"
        android:layout_width="213dp"
        android:layout_height="82dp"
        android:layout_gravity="center"
        android:fontFamily="@font/amarante"
        android:text="Take Loan"
        android:textColor="#1b1717"
            android:layout_marginTop="40dp"
        android:textSize="30sp"
        app:backgroundTint="#810000"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/goHome"
        android:layout_width="181dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:fontFamily="@font/amarante"
        android:layout_marginTop="20dp"
        android:text="Home"
        android:textColor="#1b1717"
        android:textSize="30sp"
        app:backgroundTint="#810000"
        app:cornerRadius="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>